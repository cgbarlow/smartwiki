# Environment Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/smartwiki?schema=public"

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# Bedrock Configuration
BEDROCK_KNOWLEDGE_BASE_ID=your_knowledge_base_id_here
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0
BEDROCK_EMBEDDING_MODEL=amazon.titan-embed-text-v2:0

# S3 Configuration
S3_BUCKET_NAME=your_s3_bucket_name
S3_REGION=us-east-1

# Authentication
JWT_SECRET=your_super_secret_jwt_secret_key_at_least_32_characters_long
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Auth0 (Optional)
AUTH0_DOMAIN=your_auth0_domain.auth0.com
AUTH0_CLIENT_ID=your_auth0_client_id
AUTH0_CLIENT_SECRET=your_auth0_client_secret
AUTH0_AUDIENCE=your_auth0_audience

# Cognito (Optional)
COGNITO_USER_POOL_ID=your_cognito_user_pool_id
COGNITO_CLIENT_ID=your_cognito_client_id
COGNITO_REGION=us-east-1

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,md,csv,json
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Security
CORS_ORIGIN=http://localhost:3001,http://localhost:3000
API_KEY_HEADER=x-api-key
API_KEY=your_optional_api_key_here

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_PATH=/health

# Multi-tenancy
DEFAULT_TENANT=default
TENANT_HEADER=x-tenant-id

# Performance
CACHE_TTL=3600
QUERY_TIMEOUT=30000
MAX_CONCURRENT_QUERIES=10

# Development
DEBUG=smartwiki:*
ENABLE_SWAGGER=true
SWAGGER_PATH=/api-docs